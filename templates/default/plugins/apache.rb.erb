provides 'apache'
provides 'apache/version'

apache Mash.new unless apache
apache[:version] = nil unless apache[:version]

status, stdout, stderr = run_command(:no_status_check => true, :command => "<%= node['apache']['binary'] %> -v")

if status == 0
  stdout.split("\n").each do |line|
    case line
    when /^Server version: Apache\/(\d+\.\d+\.\d+)/
      apache[:version] = $1
    end
  end
end
